<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd
        ">

    <!-- 具体的实现bean -->
    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="jack-data"/>
    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry address="${zookeeper.address}"/>
    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="${dubbo.port}"/>
    <!-- 禁止重试动作 -->
    <dubbo:provider delay="-1" timeout="20000" retries="0"/>

    <dubbo:service interface="com.jack.data.service.label.LabelStatusService" ref="labelStatusService"/>
    <dubbo:service interface="com.jack.data.service.dailytarget.DailyTargetService" ref="dailyTargetService"/>
    <dubbo:service interface="com.jack.data.service.bikeroute.BikeRouteService" ref="bikeRouteService"/>
    <dubbo:service interface="com.jack.data.service.biketeam.BikeTeamService" ref="bikeTeamService"/>
    <dubbo:service interface="com.jack.data.service.biketeam.BikeTeamUserService" ref="bikeTeamUserService"/>
    <dubbo:service interface="com.jack.data.service.sportdata.SportDataService" ref="sportDataService"/>
    <dubbo:service interface="com.jack.data.service.label.LabelDataService" ref="labelDataService"/>
    <dubbo:service interface="com.jack.data.service.riding.RidingService" ref="ridingService"/>
    <dubbo:service interface="com.jack.data.service.run.RunService" ref="runService"/>
    <dubbo:service interface="com.jack.data.service.swim.SwimService" ref="swimService"/>
    <dubbo:service interface="com.jack.data.service.dailydata.DailyDataService" ref="dailyDataService"/>
    <dubbo:service interface="com.jack.data.service.career.CareerService" ref="careerService"/>


    <dubbo:reference id="accountService" interface="com.jack.user.service.user.AccountService" check="false"/>
    <dubbo:reference id="userInfoService" interface="com.jack.user.service.user.UserInfoService" check="false"/>

</beans>